{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "collectCoverageFrom": [
    "src/**/*.{ts, js}",
    "!**/node_modules/**",
    "!lib/**",
    "!src/__tests__/**"
  ],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": { 
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}